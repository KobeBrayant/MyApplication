<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="200px">

    <ImageView

        android:layout_width="250px"
        android:layout_height="187px"
        android:layout_marginTop="4px"
        android:background="@mipmap/ic_launcher"
        android:id="@+id/imageView1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:layout_marginTop="30px"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="公司名称" />

        <com.ysd.keepcar.utils.RatingBar
            android:id="@+id/star"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="20px"
            android:layout_height="30px"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            app:starCount="5"
            app:starEmpty="@mipmap/rating_small_empty"
            app:starFill="@mipmap/rating_small_full"
            app:starHalf="@mipmap/rating_small_half"
            app:starImageSize="25px"
            app:starStep="2.5"
            app:stepSize="Half"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="26px"
            android:text="1.8Km 北京朝阳区"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/x10"
        android:textSize="@dimen/x12"
        android:textColor="@color/red"
        android:text="￥18.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="24px"
        android:layout_marginRight="24px" />
        <TextView
            android:text="(五座轿车)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
