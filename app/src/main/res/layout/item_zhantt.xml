<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <ImageView

        android:layout_width="250px"
        android:layout_height="187px"
        android:layout_marginTop="4px"
        android:background="@mipmap/ic_launcher"
        android:id="@+id/zhan_chezhao" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zhan_cheming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:layout_marginTop="30px"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="公司名称" />
            <TextView
                android:layout_marginLeft="20px"
                android:layout_marginStart="20px"
                android:layout_marginTop="30px"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhan_chexi"
                android:layout_marginLeft="20px"
                android:layout_marginStart="20px"
                android:layout_marginTop="30px"
                android:text="车系"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
     <TextView
         android:id="@+id/zhan_shijiaqian"
         android:layout_marginLeft="20px"
         android:text="试驾500"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<TextView
    android:layout_marginTop="5px"
    android:layout_marginLeft="20px"
    android:layout_marginBottom="26px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="￥"/>
        <TextView
 android:id="@+id/zhan_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="26px"
            android:text="价钱"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="26px"
                android:text="万"/>
            <TextView
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="26px"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <TextView
               android:layout_marginTop="5px"
               android:layout_marginLeft="20px"
               android:layout_marginBottom="26px"
               android:id="@+id/zhan_jiaqian"
               android:text="价钱"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5px"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="26px"
                android:text="万"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:orientation="vertical">

        <TextView
            android:textColor="#ffff"
            android:background="#F20804"
            android:id="@+id/zhan_shijia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:text="约试驾"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>
