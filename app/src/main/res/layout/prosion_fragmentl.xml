<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/baijing">
        <com.ysd.keepcar.ui.myview.CircleImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y55"
            app:border_overlay="true"
            android:layout_centerInParent="true"
            android:id="@+id/icon_login"
            android:src="@drawable/ic_launcher_background"
            app:border_width="@dimen/y100"/>
                <TextView
                    android:layout_centerHorizontal="true"
                   android:layout_below="@+id/icon_login"
                    android:id="@+id/name_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17647572011"
                    android:textSize="30px" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y15"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/y10"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/myorder" />
                <TextView
                    android:id="@+id/my_dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x16"
                    android:text="我的订单"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ef8318"
                    android:textSize="30px" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30px"
                android:background="#c2c2c6"></View>
            <RadioGroup
                android:id="@+id/group_dingdan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/daifukuan_rabtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/pending_payment"
                    android:gravity="center"
                    android:paddingTop="10px"
                    android:text="待付款"
                    android:textColor="#999"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/daishigong_rabtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/belt_construction"
                    android:gravity="center"
                    android:text="待施工"
                    android:textColor="#999"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/daifahuo_rabtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/belt_delivery"
                    android:gravity="center"
                    android:text="待发货"
                    android:textColor="#999"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/daishouhuo_rabtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/received"
                    android:gravity="center"
                    android:text="待收货"
                    android:textColor="#999"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/daipingjia_rabtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/evaluated"
                    android:gravity="center"
                    android:text="待评价"
                    android:textColor="#999"
                    android:textSize="26px" />
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="20px"
                android:background="#eae9e9"></View>
            <RelativeLayout
                android:id="@+id/my_car"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y15"
                android:layout_marginTop="20px"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/mycars_img"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/y15"
                    android:layout_marginLeft="35px"
                    android:src="@drawable/mycar" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mycars_img"
                    android:paddingLeft="30px"
                    android:text="我的车辆"
                    android:layout_centerInParent="true"
                    android:textColor="#17a1e6"
                    android:textSize="30px" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:src="@drawable/edit" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20px"
                android:background="#eae9e9"></View>
            <RelativeLayout
                android:id="@+id/dangqian_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">
                <TextView
                    android:id="@+id/current_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="当前车辆"
                    android:textColor="#343434"
                    android:textSize="30px" />
                <ImageView
                    android:id="@+id/img_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20px"
                    android:src="@drawable/choice" />
                <TextView
                    android:id="@+id/current_cars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/img_go"
                    android:text="1111"
                    android:textSize="26px" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="20px"
                android:background="#eae9e9"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:src="@mipmap/myaccount" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="我的账户"
                    android:layout_gravity="center"
                    android:textColor="#ef8318"
                    android:textSize="30px" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="30px"
                android:background="#c2c2c6"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">
                <TextView
                    android:id="@+id/current_dianmian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:text="所在店面"
                    android:textColor="#343434"
                    android:textSize="30px" />
                <ImageView
                    android:id="@+id/img_gos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20px"
                    android:src="@drawable/choice" />
                <TextView
                    android:id="@+id/dianmian_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/img_gos"
                    android:text="1111"
                    android:textSize="26px" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="25px"
                android:orientation="horizontal"
                android:visibility="gone">
                <View
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#ef8318"></View>
                <View
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#ffff"></View>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rid_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/jifen_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/jifen"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="积分"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/xiangmu_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/xiangmu"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="项目"
                    android:textSize="26px"
                    android:visibility="gone" />
                <RadioButton
                    android:id="@+id/chuzhi_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/chuzhi"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="储值"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/xiche_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/xiche"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="洗车"
                    android:textSize="26px"
                    android:visibility="gone" />
                <RadioButton
                    android:id="@+id/yuequan_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/yuequan"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="余额券"
                    android:textSize="26px" />
                <RadioButton
                    android:id="@+id/jibiezhekou_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/huiyuan"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="级别折扣"
                    android:textSize="26px"
                    android:visibility="gone" />
                <RadioButton
                    android:id="@+id/dingequan_btn"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_jifen"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/dingequan"
                    android:gravity="center"
                    android:paddingLeft="40px"
                    android:text="定额券"
                    android:textSize="26px" />
            </RadioGroup>
           <android.support.v4.view.ViewPager
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:id="@+id/prosion_viewpager"></android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
