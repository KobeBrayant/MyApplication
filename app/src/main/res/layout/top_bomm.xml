<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@mipmap/liu"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@mipmap/qi"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/ba" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@mipmap/jiu"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@mipmap/shi"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:src="@mipmap/qi" />

        <ImageView
            android:layout_width="122dp"
            android:layout_height="75dp"
            android:src="@mipmap/quan" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#C0BBB7"
        android:layout_width="match_parent"
        android:layout_height="4dp"></View>
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:text="热门推荐"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#C0BBB7"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
    <ListView
    android:id="@+id/home_listbom"
    android:layout_width="match_parent"
    android:layout_height="300dp"></ListView>

</LinearLayout>
