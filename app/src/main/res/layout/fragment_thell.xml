<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerlayout"
    android:layout_height="match_parent"
    tools:context="com.ysd.keepcar.ui.homeframent.zhanshiting.frament.ThellFragment">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:textSize="20sp"
            android:drawableRight="@mipmap/guanbi"
            android:gravity="center"
            android:text="品牌"
            android:id="@+id/time1"
            android:layout_width="50dp"
            android:layout_height="50dp"
        />
        <com.ysd.keepcar.utils.DropdownButton
            android:id="@+id/time2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
        <com.ysd.keepcar.utils.DropdownButton
            android:id="@+id/time3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"/>
  <TextView
      android:id="@+id/shaixuan_btn"
      android:drawableRight="@mipmap/shaixuan"
      android:textSize="20sp"
      android:text="筛选"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    </LinearLayout>
 </LinearLayout>
    <!-- 这是右侧的部分 -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right">
      <include layout="@layout/popupwindow_itme" ></include>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
