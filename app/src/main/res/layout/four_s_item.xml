<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="195px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="250px"
        android:layout_height="187px"
        android:layout_marginTop="4px"
        android:background="@mipmap/ic_launcher"
        android:id="@+id/imageView4" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="30px"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:text="公司名称" />

    <com.ysd.keepcar.utils.RatingBar
        android:id="@+id/star"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="20px"
        android:layout_height="30px"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        app:starCount="5"
        app:starEmpty="@mipmap/rating_small_empty"
        app:starFill="@mipmap/rating_small_full"
        app:starHalf="@mipmap/rating_small_half"
        app:starImageSize="25px"
        app:starStep="2.5"
        app:stepSize="Half"/>

<TextView
        android:id="@+id/for_city"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:layout_marginLeft="20px"
    android:layout_marginBottom="26px"
    android:text="1.8Km 北京朝阳区"/>

</LinearLayout>
    <ImageView
        android:layout_width="105px"
        android:layout_height="105px"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24px"
        android:layout_marginRight="24px"
        android:background="@mipmap/ic_launcher" />

</com.zhy.autolayout.AutoLinearLayout>
