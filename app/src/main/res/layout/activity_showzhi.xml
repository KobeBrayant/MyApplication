<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
       android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.ysd.keepcar.ui.shopingframents.activity.ShowzhiActivity">

   <include layout="@layout/title_ding" ></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"
            android:text="收货人："
            android:textSize="20sp"
            android:id="@+id/textView3" />

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="张三" />

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20px"
            android:layout_marginRight="20px"
            android:text="1359461646131" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#BBBBBB"
            android:text="收货地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#BBBBBB"
            android:text="北京市昌平区高碑店华膳园五楼116室"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10px"
        android:background="#D4D4D4"
        android:layout_width="match_parent"
        android:layout_height="10px"></TextView>
    <TextView
        android:layout_marginTop="25px"
        android:textSize="25sp"
        android:text="普利司通泰然者旗舰店"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#D4D4D4"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="4px"/>
    <ListView
        android:id="@+id/show_list"
        android:layout_width="match_parent"
        android:layout_height="300px"></ListView>
    <TextView
        android:background="#D4D4D4"
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="4px"></TextView>
    <RelativeLayout
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="优惠劵"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            android:text="未使用"
            android:textColor="#BBBBBB"
            android:textSize="15sp" />

        <ImageView
            android:layout_marginTop="8px"
            android:id="@+id/imageView"
            android:layout_width="50px"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="11px"
            android:layout_marginRight="11px"
            android:src="@mipmap/xuanze" />
    </RelativeLayout>
    <TextView
        android:background="#D4D4D4"
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="4px"></TextView>
    <RelativeLayout
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:text="约定上门时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="96px"
            android:layout_marginRight="96px"
            android:text="2018-1-2 8:00"
            android:textColor="#AEB9C0"
            android:textSize="20sp" />

        <ImageView

            android:layout_width="50px"
            android:layout_height="40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12px"
            android:layout_marginRight="12px"
            android:src="@mipmap/xuanze" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="合计:"
        android:textSize="20sp"
        android:id="@+id/textView6" />

    <TextView
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:text="￥100"
        android:textSize="20sp" />

    <Button
        android:background="#FF0000"
        android:text="提交订单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
