<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ysd.keepcar.ui.prisonframents.ProsionFraments">
      <include layout="@layout/title_layout"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:gravity="center"
            android:background="#ef8318">
            <ImageView
                android:id="@+id/person_head"
                android:layout_width="120px"
                android:layout_height="100px"
                android:layout_below="@+id/include"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="62dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/person_phone"
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_below="@+id/person_head"
                android:layout_centerHorizontal="true"
                android:text="17647572011"
                android:textColor="#fff" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#999" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/myorder"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_below="@+id/person_phone">

            <ImageView
                android:id="@+id/myorder_img"
                android:layout_width="60px"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:background="@drawable/myorder" />

            <TextView
                android:layout_width="180px"
                android:layout_height="120px"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/myorder_img"
                android:layout_toRightOf="@+id/myorder_img"
                android:gravity="center"
                android:text="我的订单"
                android:textColor="#ef8318" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/myorder"
            android:background="#999" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/dai"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pending_payment_text"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="1"
                android:drawableTop="@drawable/pending_payment"
                android:gravity="center"
                android:text="待付款"
                android:textColor="#999" />
            <TextView
                android:id="@+id/belt_construction_text"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="1"
                android:drawableTop="@drawable/belt_construction"
                android:gravity="center"
                android:scaleX="1"
                android:text="待施工"
                android:textColor="#999" />
            <TextView
                android:id="@+id/belt_delivery_text"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="1"
                android:drawableTop="@drawable/belt_delivery"
                android:gravity="center"
                android:text="待发货"
                android:textColor="#999" />

            <TextView
                android:id="@+id/received"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="1"
                android:drawableTop="@drawable/received"
                android:gravity="center"
                android:text="待收货"
                android:textColor="#999" />

            <TextView
                android:id="@+id/evaluated"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="1"
                android:drawableTop="@drawable/evaluated"
                android:gravity="center"
                android:text="待评价"
                android:textColor="#999" />

            <TextView
                android:id="@+id/cancelled"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/pending_payment"
                android:gravity="center"
                android:text="待付款"
                android:textColor="#999" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:gravity="center">

                <ImageView
                    android:id="@+id/mycar_img"
                    android:layout_width="70px"
                    android:layout_height="50px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/mycar" />

                <TextView
                    android:layout_width="150px"
                    android:layout_height="40px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/mycar_img"
                    android:layout_toRightOf="@+id/mycar_img"
                    android:gravity="center"
                    android:text="我的车辆"
                    android:textColor="#5a77e9" />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/edit" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/dangqian"
                    android:layout_width="150px"
                    android:layout_height="50px"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:text="当前车辆" />

                <TextView
                    android:id="@+id/mycar_content"
                    android:layout_width="250px"
                    android:layout_height="50px"
                    android:layout_alignTop="@+id/dangqian"
                    android:layout_marginEnd="49dp"
                    android:layout_marginRight="49dp"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toStartOf="@+id/imageView"
                    android:gravity="center"
                    android:text="京A8888 奥迪"
                    android:textSize="30px" />
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20px"
                    android:background="@drawable/choice"
                    android:layout_marginRight="20px"
                    android:id="@+id/imageView" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
